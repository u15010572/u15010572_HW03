@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>My Media Project</h1>
    <h3>Upload Page</h3>
    
</div>

<div class="row"> 
    <div class="col-md-6">
        <h4>Description</h4>
        <p>This is a media-uploading program that allows the user to upload documents, images and videos.</p>
    </div>
    <div class="col-md-6">
        <h4>File Selection</h4>
        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            @Html.RadioButton("Type", "document")<span>Document</span>
            @Html.RadioButton("Type", "image")<span>Image</span>
            @Html.RadioButton("Type", "video")<span>Video</span>
            <br />

            <input type="file" name="files" />
            <br />
            <input type="submit" value="submit" />
        }
    </div>
</div>